@model Faq

@{
    ViewData["Title"] = "Chi tiết câu hỏi";
}

<h2>Chi tiết câu hỏi</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.Question</h3>
    </div>
    <div class="card-body">
        <p><strong>Câu trả lời:</strong> @Model.Answer</p>
    </div>
</div>

<a href="@Url.Action("GetQuestionFAQs", "FAQs")" class="btn btn-secondary mt-3">Quay lại</a>
