@page
@model NguyenDanhHungRazorPages.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<h2>Create Account</h2>

<form method="post" class="container mt-4">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Account.AccountName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Account.AccountEmail" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Account.AccountRole" class="form-select">
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Account.AccountPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Account.IsActive" class="form-select">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
