@page
@model NguyenDanhHungRazorPages.Pages.Account.DeleteModel
<h2>Delete Account</h2>

<p>Are you sure you want to delete this account?</p>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Account?.AccountId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Account?.AccountName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Account?.AccountEmail</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.Account?.AccountRole</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.Account?.IsActive == true ? "Active" : "Inactive")</td>
    </tr>
</table>

<form method="post">
    <input type="hidden" name="id" value="@Model.Account?.AccountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>