@model RegisterViewModel

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg rounded-4" style="width: 420px; background-color: #f8f9fa;">
        <h2 class="text-center mb-3 fw-bold text-primary">Đăng ký</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger text-center rounded-3">@ViewBag.Message</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Tên người dùng</label>
                <input asp-for="UserName" class="form-control rounded-3 shadow-sm" required placeholder="Nhập tên người dùng">
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control rounded-3 shadow-sm" required placeholder="Nhập email">
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control rounded-3 shadow-sm" required placeholder="Nhập mật khẩu">
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3 shadow-sm" required placeholder="Nhập lại mật khẩu">
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm fw-semibold">Đăng ký</button>
        </form>

        <div class="text-center mt-3">
            <p class="mb-0">
                Đã có tài khoản?
                <a asp-action="Login" class="text-primary fw-semibold text-decoration-none">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>

<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
