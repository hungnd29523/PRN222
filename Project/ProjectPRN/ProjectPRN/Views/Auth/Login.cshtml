@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h2 class="text-center mb-3">Đăng nhập</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger text-center" role="alert">
                @ViewBag.Message
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input type="email" name="email" class="form-control" required placeholder="Nhập email">
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu:</label>
                <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu">
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>

        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
        </div>

        <!-- Thêm liên kết đến trang đăng ký -->
        <div class="text-center mt-2">
            <span>Chưa có tài khoản?</span> <a asp-action="Register" asp-controller="Auth" class="text-decoration-none">Đăng ký ngay</a>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap nếu chưa có -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
